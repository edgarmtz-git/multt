# ==================== CONFIGURACIÓN BÁSICA ====================
NODE_ENV=development
NEXTAUTH_SECRET=your-nextauth-secret-here
NEXTAUTH_URL=http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_ROOT_DOMAIN=localhost:3000

# ==================== BASE DE DATOS ====================
DATABASE_URL="postgresql://username:password@localhost:5432/multt"

# ==================== REDIS (CACHE) ====================
KV_REST_API_URL=your-redis-url-here
KV_REST_API_TOKEN=your-redis-token-here

# ==================== GOOGLE MAPS ====================
GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here

# ==================== STORAGE ====================
STORAGE_PROVIDER=vercel
BLOB_READ_WRITE_TOKEN=your-blob-token-here

# ==================== EMAIL ====================
RESEND_API_KEY=your-resend-api-key-here

# ==================== CONTRASEÑAS DE SEED ====================
# Contraseñas para usuarios de prueba (desarrollo)
SEED_ADMIN_PASSWORD=admin123
SEED_CLIENT_PASSWORD=restaurante123

# ==================== LOGGING ====================
LOG_LEVEL=info

# ==================== MONITORING (SENTRY) ====================
SENTRY_DSN=your-sentry-dsn-here
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn-here
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=your-sentry-project
SENTRY_RELEASE=1.0.0
