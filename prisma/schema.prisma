generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

enum UserRole {
  ADMIN
  CLIENT
}

enum OrderStatus {
  PENDING
  CONFIRMED
  PREPARING
  READY
  IN_DELIVERY
  DELIVERED
  COMPLETED
  CANCELLED
}

enum InvitationStatus {
  PENDING
  USED
  EXPIRED
  CANCELLED
}

enum DeliveryType {
  FIXED
  DISTANCE
  ZONES
  MANUAL
}
